generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkUserId   String   @unique
  firstName String?
  lastName  String?
  email     String   @unique
  imageUrl  String?
  phoneNumber String?
  about   String?
  role     String   @default("user")
  Request     Request[]
  createdAt DateTime @default(now())
  address   String?
}

model Request {
  id          String   @id @default(cuid())
  userId      String
  description String
  type        String
  charges    Float
  requiredExperience Int
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  assignedTo  String?
  user        User     @relation(fields: [userId], references: [clerkUserId])
  @@index([userId])
}